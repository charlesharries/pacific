{
  "extends": "eslint-config-wesbos/tsconfig.json",
  "include": [
    "**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"],
    },
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
  }
}